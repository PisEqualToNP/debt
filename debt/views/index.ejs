<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (debtors.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Username</th>
                        <th scope="col">Amount Owed</th>
                        <th scope="col">Amount Borrowed</th>
                    </tr>
                </thead>
                <tbody>
                    <% debtors.forEach((debtor, index) => { %>
                        <tr>
                            <th scope="row"><%= debtor.id %></th>
                            
                            <td><%= debtor.first_name %></td>
                            <td><%= debtor.last_name %></td>
                            <td><%= debtor.phone %></td>
                            <td><%= debtor.email %></td>
                            <td><%= debtor.user_name %></td>
                            <td>$<%= debtor.amount_owed %></td>
                            <td>$<%= debtor.amount_borrowed %></td>
                            <td>
                                <a href="/edit/<%= debtor.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= debtor.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
</body>
</html>